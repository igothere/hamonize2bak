	 <update id="dislikes" parameterType="com.center.hamonize.vote.Vote">
		UPDATE tb_vote  SET
			dislikes = (dislikes + 1)
				WHERE section = #{section} and pno = #{pno}

	</update>
	
	<select id="getSeq" parameterType="com.center.hamonize.vote.Vote" resultType="com.center.hamonize.vote.Vote">
		SELECT 
			* 
		FROM 
		tb_vote 
		WHERE section = #{section} and pno = #{pno}
	</select>
	
	<insert id="save" parameterType="com.center.hamonize.vote.Vote">
	INSERT INTO tb_vote (pno,section,userno) values (#{pno},#{section},#{userno})
	</insert>
	
	<insert id="saveVoteUser" parameterType="com.center.hamonize.vote.Vote">
	INSERT INTO tb_vote_users 
	(pno,userno) 
	VALUES(#{seq},#{senduserno})
	</insert>
	
	<select id="voteCheck" parameterType="com.center.hamonize.vote.Vote" resultType="Integer">
		SELECT 
			count(*) as cnt
		FROM 
		tb_vote_users
		WHERE pno = #{seq} and userno = #{senduserno}
	</select>
	

