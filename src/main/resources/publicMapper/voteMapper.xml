	<!-- 정보 저장 -->
	 <update id="likes" parameterType="com.center.hamonize.vote.Vote">
		UPDATE tb_vote  SET
			likes = (likes + 1)
				WHERE section = #{section} and pno = #{pno}

	</update>
	
